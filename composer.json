{
    "name": "md/activedirectory",
    "description": "Adds Active Directory support to SilverStripe including user synchronisation and SSO/LDAP authentication",
    "type": "silverstripe-module",
    "keywords": ["silverstripe", "ad", "active", "directory", "ldap", "sso", "saml"],
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Sean Harvey",
            "email": "sean@silverstripe.com"
        },
        {
            "name": "Stig Lindqvist",
            "email": "stig@silverstripe.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "silverstripe/framework": "~3.1",
        "silverstripe/queuedjobs": "~2.6@stable",
        "zendframework/zend-ldap": "2.8.0",
        "zendframework/zend-authentication": "2.5.3",
        "zendframework/zend-session": "2.8.0",
        "onelogin/php-saml": "^2.10.7"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8"
    },
    "extra": {
        "branch-alias": {
            "3.x-dev": "3.0.x-dev"
        }
    }
}
